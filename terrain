import turtle as t
x=0
i=0
y=0
def croix(y,x) :
t.goto(y, x)
t.goto(y+3, x)
t.goto(y-3, x)
t.goto(y, x)
for i in range(3) :
x-=25
t.goto(y, x)
croix(y,x)
x-=50
t.goto(y, x)
croix(y,x)
x-=25
t.goto(y, x)
y+=40
t.goto(y, x)
x+=25
t.goto(y, x)
croix(y,x)
x+=50
t.goto(y, x)
croix(y,x)
x+=25
t.goto(y, x)
if i <2 :
y+=40
t.goto(y, x)
i+=1
